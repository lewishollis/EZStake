<!-- app/views/sweepstakes/add_user.html.erb -->
<%= form_with(url: add_user_sweepstake_users_path(@sweepstake)) do |form| %>
  <%= form.label :user_id, "User ID:" %>
  <%= form.text_field :user_id %>
  <%= form.submit "Add User" %>
<% end %>

<!-- app/views/sweepstakes/remove_user.html.erb -->
<%= form_with(url: remove_user_sweepstake_users_path(@sweepstake)) do |form| %>
  <%= form.label :user_id, "User ID:" %>
  <%= form.text_field :user_id %>
  <%= form.submit "Remove User" %>
<% end %>
